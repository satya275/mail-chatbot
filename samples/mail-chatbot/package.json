{
  "name": "mail-chatbot-usecase",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-ai-sdk/foundation-models": "^2.1.0",
    "@sap-cloud-sdk/http-client": "^3.12.0",
    "@sap/cds": "^7.6.3",
    "@sap/cds-compiler": "^4.6.2",
    "@sap/cds-hana": "^2",
    "@sap/xssec": "^3",
    "basic-auth": "^2.0.1",
    "cds-swagger-ui-express": "^0.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.4",
    "downloadjs": "^1.4.7",
    "express": "^4",
    "langchain": "^0.1.19",
    "passport": "^0.7.0",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pdfkit": "^0.14.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^7",
    "@sap/ux-specification": "^1.120.4",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-mail-chatbot": "cds watch --open mail-chatbot/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy mail-chatbot-usecase --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "[dev]": {
        "db": "hana",
        "destinations": true,

        "AI_ENGINE": {
          "kind": "odata-v4",
          "credentials": {
            "destination": "AI_ENGINE_DEST",
            "path": "/odata/v4/AIEngineService",
            "requestTimeout": 60000
          }
        },

        "jsonplaceholder": {
          "kind": "rest",
          "credentials": {
            "url": "https://jsonplaceholder.typicode.com",
            "requestTimeout": 30000
          }
        },
        "destination_sf": {
          "kind": "rest",
          "credentials": {
            "url": "<your-successfactors-base-url>",
            "requestTimeout": 30000
          }
        },
        "auth": {
          "passport": {
            "strategy": "mock",
            "users": {
              "user@test.com": {
                "ID": "user@test.com",
                "password": "initial"
              }
            }
          }
        }
      },
      "[production]": {
        "auth": "xsuaa",
        "db": "hana",
        "destinations": true,

        "AI_ENGINE": {
          "kind": "odata-v4",
          "credentials": {
            "destination": "AI_ENGINE_DEST",
            "path": "/odata/v4/AIEngineService",
            "requestTimeout": 60000
          }
        },

        "jsonplaceholder": {
          "kind": "rest",
          "credentials": {
            "url": "https://jsonplaceholder.typicode.com",
            "requestTimeout": 30000
          }
        },
        "sthubsystem-qa": {
          "kind": "destination",
          "credentials": {
            "destination": "sthubsystem-qa"
          }
        }
      }
    },
    "sapux": [
      "app/mail-chatbot"
    ]
  }
}
